<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">    
    <title>Pastelaria</title>
  </head>
<body>
  <div class="container">
  <h2>Editar Pastel</h2>
  <p>
    <button><a class="waves-effect waves-light btn-small" href="/show">Pedidos</a></button>
    <button><a class="waves-effect waves-light btn-small" href="/show_all_pastel">Todos pastéis</a></button>
    <button><a class="waves-effect waves-light btn-small" href="/show_client">Todos clientes</a></button>
    <button><a class="waves-effect waves-light btn-small" href="/show_pastel">Cadastrar Pastel</a></button>
    <button><a class="waves-effect waves-light btn-small" href="/">Registrar Cliente</a></button>
</p>  
  <div class="file-field input-field">
  <%= typeof msg != 'undefined' ? msg : '' %>
  <% data.forEach(function(details) { %>
    <form action="/edit_pastel/<%= details._id %>" method="POST">
        Nome: <input type="text" value="<%= details.name %>" name="name"><br>
        Preço: <input type="text" value="<%= details.price %>" name="price"><br/>
        <div class="file-field input-field">
          <div class="btn grey">
            <span>File</span>
            <input name="image" type="file">
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
        <button type="submit" class="btn">Submit</button>
    </form> 
  <% }) %>
</div>

<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script> 
</body>
</html>