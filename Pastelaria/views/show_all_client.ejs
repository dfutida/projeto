<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">    
    <title>Pastelaria</title>
</head>
<body>

<div class="container">
<h2>Cliente</h2>
<table border="0">
    <thead>
        <tr>
            <td>Nome</td>
            <td>E-mail</td>
            <td>Telefone</td>
            <td>Data de aniversário</td>
            <td>Endereço</td>
            <td>Complemento</td>
            <td>Bairro</td>
            <td>CEP</td>
            <td>Cadastro</td>
            <td colspan="2">Ação</td>
        </tr>
     </thead>
    <tbody>
        <% data.forEach(function(details) { %>
            <tr>
                <td><%= details.name %></td>
                <td><%= details.email %></td>
                <td><%= details.phone %></td>
                <td><%= details.birthdate %></td>
                <td><%= details.adress %></td>
                <td><%= details.additional %></td>
                <td><%= details.district %></td>
                <td><%= details.zipcode %></td>
                <td><%= details.create_at %></td>
                <td><button><a onclick="return confirm('Tem certeza que deseja excluir?')"; href="/delete/<%= details._id %>">Deletar</a></button></td>
                <td><button><a href="/edit/<%= details._id %>">Editar</a></button></td>
            </tr>
        <% }) %>
    </tbody> 
    <p>
        <button><a class="waves-effect waves-light btn-small" href="/show">Pedidos</a></button>
        <button><a class="waves-effect waves-light btn-small" href="/show_all_pastel">Todos pastéis</a></button>
        <button><a class="waves-effect waves-light btn-small" href="/show_client">Todos clientes</a></button>
        <button><a class="waves-effect waves-light btn-small" href="/show_pastel">Cadastrar Pastel</a></button>
        <button><a class="waves-effect waves-light btn-small" href="/">Registrar Cliente</a></button>
    </p>  
</table>
</div>

<script
src="https://code.jquery.com/jquery-3.2.1.min.js"
integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>         
</body>
</html>