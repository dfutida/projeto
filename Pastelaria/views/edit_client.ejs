<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">    
    <title>Pastelaria</title>
  </head>
<body>
  <div class="container">
    <h2>Editar Cliente</h2>
    <p>
      <button><a class="waves-effect waves-light btn-small" href="/show">Pedidos</a></button>
      <button><a class="waves-effect waves-light btn-small" href="/show_all_pastel">Todos pastéis</a></button>
      <button><a class="waves-effect waves-light btn-small" href="/show_client">Todos clientes</a></button>
      <button><a class="waves-effect waves-light btn-small" href="/show_pastel">Cadastrar Pastel</a></button>
      <button><a class="waves-effect waves-light btn-small" href="/">Registrar Cliente</a></button>
  </p> 
      <% data.forEach(function(details) { %>
        <form action="/edit/<%= details._id %>" method="POST">
          <table class="striped">
            <tr>
              <td>Nome:</td>
            </tr><tr>
              <td><input type="text" value="<%= details.name %>" name="name"></td>
            </tr><tr>
              <td>E-mail:</td>
            </tr><tr>
              <td><input type="text" value="<%= details.email %>" name="email"></td>
            </tr><tr>
              <td>Telefone:</td>
            </tr><tr>
              <td><input type="text" value="<%= details.phone %>" name="phone"></td>
            </tr><tr>
              <td>Data de aniversário:</td>
            </tr><tr>
              <td><input type="text" value="<%= details.birthdate %>" name="birthdate"></td>
            </tr><tr>
              <td>Endereço:</td>
            </tr><tr>
              <td><input type="text" value="<%= details.adress %>" name="adress"></td>
            </tr><tr>
              <td>Complemento:</td>
            </tr><tr>
              <td><input type="text" value="<%= details.additional %>" name="additional"></td>
            </tr><tr>
              <td>Bairro:</td>
            </tr><tr>
              <td><input type="text" value="<%= details.district %>" name="district"></td>
            </tr><tr>
              <td>CEP:</td>
            </tr><tr>
              <td><input type="text" value="<%= details.zipcode %>" name="zipcode"><br></td>
            </tr><tr>
              <td>
                <input type="hidden" value="<%= details.create_at %>" name="create_at">
                <button type="submit">Salvar</button>
              </td>
            </tr>
          </table>            
        </form> 
      <% }) %>
  </div>
</body>
</html>